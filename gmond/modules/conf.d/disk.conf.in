modules {
  module {
    name = "disk_module"
    path = "@libdir@/ganglia/moddisk.so" 
  }
}


collection_group { 
  collect_every = 1800 
  time_threshold = 3600 
  metric { 
    name = "mdisk_total" 
    value_threshold = 1.0 
  } 
}

collection_group { 
  collect_every = 40 
  time_threshold = 180 
  metric { 
    name = "mdisk_free" 
    value_threshold = 1.0 
  } 
  metric { 
    name = "mpart_max_used" 
    value_threshold = 1.0 
  } 
}

