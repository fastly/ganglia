modules {
  module {
    name = "cpu_module"
    path = "@libdir@/ganglia/modcpu.so" 
  }
}


/* This collection group will send general info about this host every 1200 secs. 
   This information doesn't change between reboots and is only collected once. */ 
collection_group { 
  collect_once = yes 
  time_threshold = 1200 
  metric { 
    name = "mcpu_num" 
  } 
  metric { 
    name = "mcpu_speed" 
  } 
} 

collection_group { 
  collect_every = 20 
  time_threshold = 90 
  /* CPU status */ 
  metric { 
    name = "mcpu_user"  
    value_threshold = "1.0" 
  } 
  metric { 
    name = "mcpu_system"   
    value_threshold = "1.0" 
  } 
  metric { 
    name = "mcpu_idle"  
    value_threshold = "5.0" 
  } 
  metric { 
    name = "mcpu_nice"  
    value_threshold = "1.0" 
  } 
  metric { 
    name = "mcpu_aidle" 
    value_threshold = "5.0" 
  } 
  metric { 
    name = "mcpu_wio" 
    value_threshold = "1.0" 
  } 
  /* The next two metrics are optional if you want more detail... 
     ... since they are accounted for in cpu_system.  
  metric { 
    name = "cpu_intr" 
    value_threshold = "1.0" 
  } 
  metric { 
    name = "cpu_sintr" 
    value_threshold = "1.0" 
  } 
  */ 
} 



